<div class="container coasters-index">

  <h1 style="font-weight: 100">{{name}}</h1>

  <h4>Descripción</h4>
  <p>{{description}}</p>
  <p><strong>Longitud: </strong> {{length}} | <strong>Inversiones: </strong> {{inversions}}</p>

  <hr>

  <h5>Sobre el parque</h5>
  <p><strong>Nombre</strong>: {{park.name}}</p>
  <p><strong>Descripción</strong>: {{park.description}}</p>

  <a href="/coasters" class="btn btn-dark">Volver</a>

  <a href="/coasters/{{_id}}/remove" class="btn btn-dark">Eliminar</a>

  <a href="/coasters/edit/{{_id}}" class="btn btn-dark">Editar</a>

</div>
